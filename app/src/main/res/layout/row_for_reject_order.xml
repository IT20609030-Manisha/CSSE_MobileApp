<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardElevation="38dp"
    app:cardCornerRadius="20dp"
    app:cardUseCompatPadding="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="30dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:text="Order ID"
            android:textSize="16sp"
            android:id="@+id/tv_orderIdReject">
        </TextView>


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:text="Site Name"
            android:textSize="16sp"
            android:id="@+id/tv_siteNameReject">
        </TextView>


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:text="Item List"
            android:textSize="16sp"
            android:id="@+id/tv_itemListReject"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:text="Purchase Date"
            android:textSize="16sp"
            android:id="@+id/tv_purchaseDateReject"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:text="Delivery Date"
            android:textSize="16sp"
            android:id="@+id/tv_deliveryDateReject"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:text="Delivery Address"
            android:textSize="16sp"
            android:id="@+id/tv_deliveryAddReject"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:text="Total Amount"
            android:textSize="16sp"
            android:id="@+id/tv_totalAmountReject"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:text="Order Status"
            android:textSize="16sp"
            android:id="@+id/tv_orderStatusReject"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:text="Required Quantity"
            android:textSize="16sp"
            android:id="@+id/tv_orderQtyReject"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:text="Delivered Quantity"
            android:textSize="16sp"
            android:id="@+id/tv_orderdeliveredQtyReject"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:text="Delivery Note"
            android:textSize="16sp"
            android:id="@+id/tv_orderdelNoteReject"/>


    </LinearLayout>

</androidx.cardview.widget.CardView>